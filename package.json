{
  "type": "module",
  "name": "cloudsaver",
  "version": "1.1.1",
  "description": "Universal Emulation Save Sync - Zero-dependency standalone executables for comprehensive emulator save synchronization",
  "main": "dist/cli/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:bundle": "npm run build && esbuild dist/cli/index.js --bundle --platform=node --target=node18 --format=cjs --outfile=bundle/index.cjs --external:electron",
    "build:exe": "npm run build:bundle && pkg bundle/index.cjs --targets=node18-win-x64 --output=bin/cloudsaver.exe",
    "build:exe:all": "npm run build:bundle && pkg bundle/index.cjs --targets=node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path=./bin && node -e \"const fs=require('fs'); if(fs.existsSync('bin/index-linux')) fs.renameSync('bin/index-linux','bin/cloudsaver-linux'); if(fs.existsSync('bin/index-macos')) fs.renameSync('bin/index-macos','bin/cloudsaver-macos'); if(fs.existsSync('bin/index-win.exe')) fs.renameSync('bin/index-win.exe','bin/cloudsaver-windows.exe');\"",
    "build:launcher": "npm run build && echo 'Standalone launchers created in bin/ directory'",
    "start:launcher": ".\\bin\\cloudsaver.ps1",
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.cjs",
    "test:ci": "npm run build && npm run test",
    "test:simple": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.cjs tests/unit/core/config.simple.test.ts",
    "test:advanced-sync": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.cjs tests/unit/sync/advanced-sync.test.ts",
    "test:config": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.cjs tests/unit/core/config.test.ts",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --config=jest.config.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camcast3/cloudsaver.git"
  },
  "keywords": [
    "emulation",
    "cloud",
    "sync",
    "save"
  ],
  "author": "Cameron Carlton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/camcast3/cloudsaver/issues"
  },
  "homepage": "https://github.com/camcast3/cloudsaver#readme",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@vercel/ncc": "^0.38.3",
    "@yao-pkg/pkg": "^6.6.0",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.9",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "conf": "^14.0.0",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "inquirer": "^12.9.4",
    "winston": "^3.17.0",
    "zod": "^4.1.4"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "node_modules/**/*"
    ],
    "outputPath": "bin"
  }
}
